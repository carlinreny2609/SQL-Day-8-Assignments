('015','Maize','Food', '32.00',20);

select* from Items;

select Itemname,
ItemID,
Itemname,
Itemdescription,
Price,
QuantityAvailable,
sum(Price) over( partition by Itemdescription order by Itemdescription) as Sum_price ,
max(Price) over ( partition by Itemdescription order by Itemdescription) as Max_price,
min(Price) over ( partition by Itemdescription order by Itemdescription) as Min_Price,
rank() over(partition by Itemdescription order by Itemdescription) as Rank_no from Items;
