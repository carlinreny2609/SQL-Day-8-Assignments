create database DepartmentalStore;

use DepartmentalStore;

CREATE TABLE Items (
    ItemID INT PRIMARY KEY,
    Itemname VARCHAR(255),
    Itemdescription TEXT,
    Price DECIMAL(10, 2),
    QuantityAvailable INT
);

insert into Items  (ItemID,Itemname,Itemdescription,Price,QuantityAvailable)
values('001','Rice','Food', '70.00',20),
('002','Dhal','Food', '75.00',20),
